<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<androidx.cardview.widget.CardView
    android:id="@+id/cardlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/addonname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="5dp"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="bold"
            tools:ignore="Hardcodedtext"
            />

        <EditText
            android:id="@+id/addonname_et"
            android:layout_width="360dp"
            android:layout_below="@+id/addonname"
            android:layout_height="49dp"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="13dp"
            android:layout_marginTop="5dp"
            android:autofillHints=""
            android:background="@drawable/boarder"
            android:hint="Enter Name"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
            android:inputType="text"
            android:textSize="13sp"
            android:padding="10dp"
            tools:ignore="Hardcodedtext"/>
        <TextView
            android:id="@+id/addondescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addonname_et"
            android:layout_marginStart="13dp"
            android:layout_marginTop="5dp"
            android:text="Description"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="bold"
            tools:ignore="Hardcodedtext"
            />

        <EditText
            android:id="@+id/addondesc_et"
            android:layout_width="360dp"
            android:layout_below="@+id/addondescription"
            android:layout_height="49dp"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="13dp"
            android:layout_marginTop="5dp"
            android:autofillHints=""
            android:background="@drawable/boarder"
            android:hint="Enter Description"
            android:inputType="text"
            android:textSize="13sp"
            android:padding="10dp"
            tools:ignore="Hardcodedtext"/>
        <TextView
            android:id="@+id/addonprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addondesc_et"
            android:layout_marginStart="13dp"
            android:layout_marginTop="5dp"
            android:text="Price"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="bold"
            tools:ignore="Hardcodedtext"
            />
        <EditText
            android:id="@+id/addonpriceet"
            android:layout_width="360dp"
            android:layout_below="@+id/addonprice"
            android:layout_height="49dp"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="13dp"
            android:layout_marginTop="5dp"
            android:autofillHints=""
            android:background="@drawable/boarder"
            android:hint="Enter Price"
            android:inputType="number"
            android:textSize="13sp"
            android:padding="10dp"
            tools:ignore="Hardcodedtext"/>
        <TextView
            android:id="@+id/addonicons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addonpriceet"
            android:layout_marginStart="13dp"
            android:layout_marginTop="5dp"
            android:text="Addon icons"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="bold"
            tools:ignore="Hardcodedtext"
            />
        <androidx.appcompat.widget.AppCompatSpinner
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="10dp"
            android:spinnerMode="dialog"
            android:prompt="@string/iconprompt"
            android:layout_below="@+id/addonicons"
            android:background="@drawable/bg_spinner"
            android:layout_marginTop="8dp"
            android:id="@+id/Addonspinnerview" />
        <androidx.cardview.widget.CardView
            android:id="@+id/cardview"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="8dp"
            android:elevation="5dp"
            android:padding="15dp"
            app:cardBackgroundColor="@color/white"
            android:layout_below="@+id/Addonspinnerview"
            app:cardCornerRadius="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/Addonimage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    tools:ignore="ContentDescription" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/submitbutton"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardview"
            android:layout_marginStart="19dp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="19dp"
            android:layout_marginBottom="29dp"
            android:textColor="@color/white"
            android:background="@drawable/buttonbackground"
            android:padding="13dp"
            android:text="@string/submit" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
    </RelativeLayout>
    </layout>