<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="8dp"
            android:elevation="5dp"
            android:padding="15dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="15dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/notificationimg"
                    android:layout_width="wrap_content"
                    android:layout_height="125dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="8dp"
                    tools:ignore="contentdescription" />
 <LinearLayout
     android:id="@+id/notificationlayout"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_below="@+id/notificationimg"
     android:orientation="horizontal">
     <TextView
         android:id="@+id/storename"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="store Name"
         android:textColor="@color/black"
         android:textSize="13sp"
         android:textStyle="bold"
         android:layout_weight="1.9"
         android:layout_marginTop="6dp"
         android:layout_marginStart="13dp"
         tools:ignore="HardcodedText" />

     <TextView
         android:id="@+id/dayandtime"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_weight="0.1"
         android:layout_marginTop="6dp"
         android:drawablePadding="5dp"
         android:text="@string/day_time_mention"
         android:textColor="@color/black"
         android:textSize="12sp"
         tools:ignore="HardcodedText,UseCompatTextViewDrawableXml"/>
 </LinearLayout>
                <TextView
                    android:id="@+id/notification_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/notificationlayout"
                    android:layout_marginTop="6dp"
                    android:text="Notifications description"
                    android:layout_marginStart="13dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    tools:ignore="HardcodedText,UseCompatTextViewDrawableXml"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</layout>