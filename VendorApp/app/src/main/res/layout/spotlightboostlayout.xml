    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <TextView
                android:id="@+id/perviewcost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:layout_marginTop="10dp"
                android:text="Per View Cost:"
                android:textColor="@color/black"
                android:textSize="13sp"
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/viewamt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_toEndOf="@+id/perviewcost"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/perclickcost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/per_click_cost"
                android:layout_marginStart="13dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/perviewcost"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/perclickcostamt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/perclickcost"
                android:layout_below="@+id/perviewcost"
                android:text=""
                android:textColor="@color/black"
                android:textSize="13sp"
                android:textStyle="bold"/>


        <TextView
            android:id="@+id/max_amt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_below="@+id/perclickcost"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:text="Max Amount"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            tools:ignore="Hardcodedtext"/>

        <EditText
            android:id="@+id/maxamtet"
            android:layout_width="369dp"
            android:layout_height="49dp"
            android:layout_below="@+id/max_amt"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="13dp"
            android:layout_marginTop="5dp"
            android:autofillHints=""
            android:layout_marginBottom="10dp"
            android:background="@drawable/boarder"
            android:hint="Enter Amount"
            android:inputType="number"
            android:padding="10dp"
            android:text=""
            android:textSize="15sp"
            tools:ignore="Hardcodedtext"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/submitbutton"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maxamtet"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="15sp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/buttonbackground"
            android:padding="10dp"
            android:text="@string/submit"
            android:textSize="12sp"
            android:textColor="@color/white" />
    </RelativeLayout>
<!--    </androidx.cardview.widget.CardView>-->
</layout>