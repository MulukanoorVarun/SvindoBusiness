        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="8dp"
        android:elevation="5dp"
        android:padding="25dp"
        app:cardBackgroundColor="@color/white"
