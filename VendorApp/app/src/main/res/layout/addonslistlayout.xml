<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardclicking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="8dp"
            android:elevation="5dp"
            android:padding="15dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="15dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/deleteicon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/delete_icon"
                    android:layout_alignParentEnd="true"/>
                <TextView
                    android:id="@+id/addonName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_marginStart="10dp"
                    tools:ignore="HardcodedText" />
                    <TextView
                        android:id="@+id/AddonName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/addonName"
                        android:text="Canon 5d mark iv"
                        android:lines="1"
                        android:ellipsize="end"
                        android:layout_marginTop="6dp"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="13dp"
                        tools:ignore="HardcodedText" />
                <TextView
                    android:id="@+id/addonDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/AddonName"
                    android:layout_marginTop="6dp"
                    android:text="Description"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_marginStart="10dp"
                    tools:ignore="HardcodedText" />
                <TextView
                    android:id="@+id/AddonDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/addonDescription"
                    android:layout_marginTop="6dp"
                    android:text="Canon 5d mark iv"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:lines="1"
                    android:ellipsize="end"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="13dp"
                    tools:ignore="HardcodedText" />
                <TextView
                    android:id="@+id/addonPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/AddonDescription"
                    android:text="Price"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    tools:ignore="HardcodedText" />
                <TextView
                    android:id="@+id/AddonPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/AddonDescription"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="15dp"
                    android:text="123"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    tools:ignore="HardcodedText" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</layout>
